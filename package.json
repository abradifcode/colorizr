{
  "name": "colorizr",
  "version": "1.0.0",
  "description": "Manipulate colors like a boss",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "keywords": [
    "color",
    "color manipulation"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbarbara/colorizr.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/colorizr/issues"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "src"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.1",
    "babel-jest": "^22.0.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "flow-bin": "^0.62.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "rimraf": "^2.6.2",
    "watch-run": "^1.2.5"
  },
  "scripts": {
    "build": "npm run clean && npm run build:commonjs && npm run build:es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib",
    "build:es": "cross-env NODE_ENV=production babel src -d es",
    "watch": "npm run build && watch-run -p 'src/**/*.js' npm run build:es",
    "clean": "rimraf es && rimraf lib",
    "lint": "eslint src test",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "precommit": "npm run lint && npm test",
    "prepublishOnly": "npm run build"
  }
}
